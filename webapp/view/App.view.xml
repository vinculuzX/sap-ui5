<mvc:View xmlns="sap.m"
   xmlns:tnt="sap.tnt"
	xmlns:html="http://www.w3.org/1999/xhtml"
   xmlns:mvc="sap.ui.core.mvc">
   <tnt:ToolPage id="main">
      <tnt:header>
         <tnt:ToolHeader class="navContainerBlock">
				<Button id="sideNavigationToggleButton"
						icon="sap-icon://menu2"
						type="Transparent">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
            <Title level="H2" class="navContainerBlock navTitle" text="SAP TRAVEL MANNAGER" />
            <tnt:ToolHeaderUtilitySeparator />
            <FlexBox
					height="auto"
					alignItems="Start"
					justifyContent="End">
               <items>
                  <Button 
                        class="navButton"
                        text="Travel Request"
                        icon="sap-icon://travel-request"
                        iconFirst="true"
                        type="Transparent">
                  </Button>
                  <Button 
                        class="navButton"
                        text="Travel Expenses"
                        icon="sap-icon://travel-expense"
                        iconFirst="true"
                        type="Transparent">
                  </Button>
                  <Button 
                        class="navButton"
                        text="Travel Itinerary"
                        icon="sap-icon://travel-itinerary"
                        iconFirst="true"
                        type="Transparent">
                  </Button>
                  <Button 
                        class="navButton"
                        text="My Flight"
                        icon="sap-icon://flight"
                        iconFirst="true"
                        type="Transparent">
                  </Button>
                  <Button
                     class="navButton navNotification"
                     icon="sap-icon://bell"
                     type="Transparent">
                  </Button>
               </items>  
            </FlexBox>
			</tnt:ToolHeader>
      </tnt:header>
      <tnt:sideContent>
      
      </tnt:sideContent>
      <tnt:mainContents>
         <NavContainer id="pageContainer">
				<pages>
               <App id="app"/> 
            </pages>
         </NavContainer>
      </tnt:mainContents>
   </tnt:ToolPage>
</mvc:View>